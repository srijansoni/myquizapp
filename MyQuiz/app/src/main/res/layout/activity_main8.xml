<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.vivek.myquiz.main3Activity"
    android:background="@drawable/image">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Goto"
        android:textColor="#000"
        android:textSize="30sp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/t8"/>
    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="15dp"
        ></Spinner>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Q2. Which of these is not a noble gas ?"
        android:textAlignment="center"
        android:id="@+id/q8"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textSize="35sp"
        android:background="@drawable/shape"
        android:layout_marginTop="60dp"
        android:textColor="#000"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/a8a"
        android:textColor="#000"
        android:layout_marginRight="15dp"
        android:background="@drawable/shape"
        android:layout_marginLeft="15dp"
        android:layout_below="@+id/q8"
        android:layout_marginTop="20dp"
        android:textSize="30sp"
        android:text="A. Neon"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/a8a"
        android:id="@+id/a8b"
        android:textColor="#000"
        android:background="@drawable/shape"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="20dp"
        android:textSize="30sp"
        android:text="B. Argon"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/a8c"
        android:textColor="#000"
        android:layout_below="@+id/a8b"
        android:layout_marginLeft="15dp"
        android:background="@drawable/shape"
        android:layout_marginTop="20dp"
        android:layout_marginRight="15dp"
        android:textSize="30sp"
        android:text="C. Hydrogen"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/a8c"
        android:id="@+id/a8d"
        android:background="@drawable/shape"
        android:textColor="#000"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="15dp"
        android:textSize="30sp"
        android:text="D. Radon"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UNDO"
        android:textColor="#000"
        android:textSize="30sp"
        android:layout_below="@+id/a8d"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:id="@+id/ba8"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="250dp"
        android:layout_below="@+id/a8d"
        android:layout_marginTop="20dp"
        android:text="NEXT"
        android:textSize="30sp"
        android:id="@+id/n8"
        android:textColor="#000"/>

</RelativeLayout>
